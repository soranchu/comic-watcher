<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/selector_list_bg_odd" >

    <ImageView
        android:id="@+id/img_top_comic_thumb"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@color/gray_light_alpha" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_top_comic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_medium"
            android:text="宇宙兄弟"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_top_comic_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:text="小山宙哉 / 講談社"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_top_series_ihave_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_small"
        android:paddingTop="@dimen/padding_medium"
        android:text="@string/txt_series_ihave_num"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray_normal" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_small"
        android:paddingTop="@dimen/padding_large"
        android:text="/"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/gray_normal" />

    <TextView
        android:id="@+id/txt_top_series_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:text="@string/txt_series_num"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/gray_normal" />

</LinearLayout>