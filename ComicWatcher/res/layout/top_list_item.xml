<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_background"
    android:layout_weight="1" >

    <ImageView
        android:id="@+id/img_top_comic_thumb"
        android:layout_width="48dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:paddingRight="12dp" >

            <TextView
                android:id="@+id/txt_top_comic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:text="宇宙兄弟"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gray_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_top_notification_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_notification_oval"
                android:minHeight="24dp"
                android:minWidth="24dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_top_series_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:text="@string/txt_series_num"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_normal" />

            <TextView
                android:id="@+id/txt_top_scheduled_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="@string/txt_scheduled_date"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_normal"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_top_reserved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:text="@string/txt_reserved"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/green_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_top_non_reserved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:text="@string/txt_non_reserved"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red_dark"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>